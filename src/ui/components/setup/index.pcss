:local {
    .wrapper {

    }

    .players {
        display: flex;
        flex-flow: row wrap;
        margin: 0 -10px;
    }

    .playerContent {
        flex: 1 1 300px;
        min-width: 300px;
        padding: 0 5px;
    }

    .playerLeft,
    .playerRight {
        padding: 10px;
    }

    .playerLeft {
        background: rgba(0, 255, 0, 0.05);
    }

    .playerRight {
        background: rgba(255, 0, 0, 0.05);
    }
}
